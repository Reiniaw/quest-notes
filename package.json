{
  "name": "quest-notes",
  "version": "1.3.0",
  "description": "Заметки в стиле квестов: главные задания и мини-задания (Electron)",
  "main": "src/main.js",
  "type": "module",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dev": "electronmon .",
    "build": "electron-builder",
    "dist": "set CSC_IDENTITY_AUTO_DISCOVERY=0&& electron-builder --win"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.2"
  },
  "build": {
    "appId": "com.quest.notes",
    "productName": "Quest Notes",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
"nsis": {
  "oneClick": false,  
  "perMachine": false,
  "allowToChangeInstallationDirectory": true,
  "deleteAppDataOnUninstall": false,
  "createDesktopShortcut": true,
  "createStartMenuShortcut": true,
  "shortcutName": "Quest Notes"
}
}
